{
  "name": "brodrister",
  "version": "0.1.0",
  "description": "A simple toast component for React",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.ts",
        "default": "./dist/index.d.mts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "react",
    "toast"
  ],
  "author": "Jostein Kringlen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JosteinKringlen/brodrister.git"
  },
  "bugs": {
    "url": "https://github.com/JosteinKringlen/brodrister/issues"
  },
  "dependencies": {
    "@radix-ui/react-toast": "^1.1.4",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.2",
    "uuid": "^9.0.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.1",
    "@remix-run/eslint-config": "2.4.0",
    "@types/node": "20.10.5",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "@types/uuid": "9.0.7",
    "autoprefixer": "10.4.16",
    "cssnano": "6.0.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "postcss": "^8.4.29",
    "postcss-preset-env": "9.3.0",
    "prettier": "3.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsup": "8.0.1",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
